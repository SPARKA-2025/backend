# SPARKA Backend Configuration for Docker Integration
# Copy this file to .env and update the values as needed

APP_NAME="SPARKA Backend"
APP_ENV=local
APP_KEY=base64:your-app-key-here-generate-with-php-artisan-key-generate
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_TIMEZONE=Asia/Jakarta

LOG_CHANNEL=stack
LOG_SLACK_WEBHOOK_URL=

# Database Configuration (Docker MySQL)
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=sparka_db
DB_USERNAME=sparka_user
DB_PASSWORD=sparka123

# Redis Configuration (Docker Redis)
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0

# Cache & Session (Using Redis)
CACHE_DRIVER=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-here
JWT_TTL=60
JWT_REFRESH_TTL=20160

# AI Services Configuration
AI_API_URL=http://localhost:5000
AI_API_TIMEOUT=30

# gRPC Services Configuration
GRPC_VEHICLE_URL=localhost:50051
GRPC_OCR_URL=localhost:50052
GRPC_PLATE_URL=localhost:50053
GRPC_TIMEOUT=30

# Integration Services
CCTV_INTEGRATION_URL=http://localhost:8001
FILE_PROCESSOR_URL=http://localhost:8002
WEBSOCKET_URL=http://localhost:8003
INTEGRATION_SERVICE_URL=http://localhost:8004

# External Services
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=your-influxdb-token
INFLUXDB_ORG=sparka
INFLUXDB_BUCKET=parking_analytics

GRAFANA_URL=http://localhost:3001
RABBITMQ_URL=http://localhost:15672
RABBITMQ_USER=sparka
RABBITMQ_PASSWORD=sparka123

# File Upload Configuration
FILESYSTEM_DRIVER=local
UPLOAD_MAX_SIZE=10240
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif,bmp,webp
ALLOWED_VIDEO_TYPES=mp4,avi,mov,wmv,flv,webm

# API Rate Limiting
API_RATE_LIMIT=60
API_RATE_LIMIT_WINDOW=1

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With

# Security
APP_CIPHER=AES-256-CBC
HASH_DRIVER=bcrypt
HASH_ROUNDS=12

# Mail Configuration (Optional)
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=your-email@gmail.com
MAIL_FROM_NAME="SPARKA System"

# Monitoring & Analytics
ENABLE_QUERY_LOG=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ERROR_TRACKING=true

# Development Settings
DEBUG_BAR_ENABLED=true
API_DEBUG=true
LOG_LEVEL=debug

# Production Settings (Set to false/off in production)
# APP_DEBUG=false
# API_DEBUG=false
# DEBUG_BAR_ENABLED=false
# LOG_LEVEL=error